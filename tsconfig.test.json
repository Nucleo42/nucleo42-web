{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
  },
  "include": ["src/**/*.ts", "**/src/tests/*.test.ts"],
  "exclude": ["node_modules"]
}
